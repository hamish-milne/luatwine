{
    "configurations": [
        {
            "type": "node-terminal",
            "name": "Run Script: test",
            "request": "launch",
            "command": "yarn test",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: build",
            "request": "launch",
            "command": "yarn build",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome Debugger",
            "url": "http://localhost:9000/",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true,
        }
    ]
}