{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es2015",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true
    },
    "exclude": [
        "src/**/*.test.ts",
        "src/convert-offline.ts",
        "node_modules"
    ],
    "ts-node": {
        "swc": true
    }
}